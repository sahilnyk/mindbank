{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "user_id",
        "generated_at",
        "preferences",
        "emotional_patterns",
        "facts",
        "raw_extractions"
    ],
    "properties": {
        "user_id": {
            "type": "string"
        },
        "generated_at": {
            "type": "string",
            "format": "date-time"
        },
        "preferences": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "category",
                    "value",
                    "confidence",
                    "source_messages"
                ],
                "properties": {
                    "category": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    },
                    "confidence": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "source_messages": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "emotional_patterns": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "pattern",
                    "confidence",
                    "source_messages"
                ],
                "properties": {
                    "pattern": {
                        "type": "string"
                    },
                    "confidence": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "source_messages": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "facts": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "fact_type",
                    "value",
                    "confidence",
                    "source_messages"
                ],
                "properties": {
                    "fact_type": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    },
                    "confidence": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "source_messages": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "raw_extractions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "text",
                    "message_index"
                ],
                "properties": {
                    "text": {
                        "type": "string"
                    },
                    "message_index": {
                        "type": "integer"
                    },
                    "entity_type": {
                        "type": "string"
                    }
                }
            }
        }
    }
}